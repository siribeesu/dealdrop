{
    "name": "dealdrop-root",
    "version": "1.0.0",
    "description": "DealDrop - Modern E-commerce Platform",
    "main": "backend/server.js",
    "scripts": {
        "start": "node backend/server.js",
        "server": "nodemon backend/server.js",
        "client": "npm run dev --prefix frontend",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "build": "npm install && cd frontend && npm install --include=dev && npm run build",
        "heroku-postbuild": "npm run build"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.3",
        "multer": "^1.4.5-lts.1",
        "multer-storage-cloudinary": "^4.0.0",
        "nodemailer": "^6.9.7",
        "resend": "^6.9.2",
        "xss-clean": "^0.1.4",
        "concurrently": "^8.2.2"
    },
    "devDependencies": {
        "nodemon": "^3.0.2"
    }
}